\newcommand*{\makepageDeGarde}
{
\pagestyle{fancy}
\renewcommand{\headrulewidth}{0.0pt}
\renewcommand{\footrulewidth}{0.2pt}
\lfoot{}
\cfoot{\textbf{Année Universitaire \@anneeUniversitaire}}
\rfoot{}

\begin{center}
\textcolor{blue}{
	\Large{
		\textbf{ 
			\textsc{République Tunisienne\\
			Ministère de l'Enseignement Supérieur\\
			et de la Recherche Scientifique\\
			Université de Tunis El Manar\\
			Institut Supérieur d'Informatique\\
			}
		}
	}
}

\vspace{10mm}
\IfFileExists{LogoISI.png}{
	\includegraphics[width=5cm]{LogoISI} \\
}{}

\vspace{10mm}
	\textbf{
	\huge{
		Rapport de Projet de Fin d'Études\\
	}
}

\vspace{10mm}
\Large{
	Présenté en vue de l'obtention du \\ \vspace{2mm} Diplôme: \textbf{\@diplome}\\ \vspace{2mm} Parcours: \textbf{\@option}\\
}

\vspace{10mm}
\Large{
	Réalisé par \\ \vspace{2mm} \@prenomNomUn \@prenomNomDe 
}

\vspace{10mm}
\Large{
	Sujet\\ \vspace{2mm}
	\textbf{
		\huge{
		\@sujet\\
		}
	}
}

\vspace{15mm}
\Large{
	Organisme d'accueil\\
}

\vspace{2mm}
\IfFileExists{\@organismeAccueilImg}{
\includegraphics[width=6cm]{\@organismeAccueilImg}\\
}{}

\vspace{15mm}
	\begin{tabular}{cc}
		\@encadrantEte \\	
		\Large{Encadrant à l'ISI:} & \textbf{Mme/M.} \Large{\@encadrantISI} \\	
	\end{tabular} 
\end{center}

}

\newcommand*{\diplome}[1]{\def\@diplome{#1}}
\newcommand*{\option}[1]{\def\@option{#1}}
\newcommand*{\prenomNomUn}[2]{\def\@prenomNomUn{#1 \textbf{\uppercase{#2}}}}
\newcommand*{\prenomNomDe}[2]{\def\@prenomNomDe{\ifthenelse{\equal{#1}{}}{}{\hspace{5mm} \& \hspace{5mm} #1 \textbf{\uppercase{#2}}}}}
\newcommand*{\sujet}[1]{\def\@sujet{#1}}
\newcommand*{\organismeAccueil}[1]{\def\@organismeAccueilImg{#1}}
\newcommand*{\encadrantEte}[2]{\def\@encadrantEte{\ifthenelse{\equal{#1}{}}{}{\Large{Encadrant à l'entreprise:} & \textbf{Mme/M.} \Large{#1} \textbf{\uppercase{#2}}}}}
\newcommand*{\encadrantISI}[2]{\def\@encadrantISI{#1 \textbf{\uppercase{#2}}}}
\newcommand*{\anneeUniversitaire}[1]{\def\@anneeUniversitaire{#1}}